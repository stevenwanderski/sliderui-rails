<div id="slide-list">
  <% slides.each do |slide| %>
    <div class="slide-item slide-item--showing" data-slide-id="<%= slide.id %>">
      <div class="slide-item__child">
        <div
          style="background-image: url(<%= slide.image.url %>)"
          class="slide-item__preview"
        ></div>
      </div>

      <div class="flex gap-2 items-center">
        <%= link_to dashboard_slide_destroy_path(slide_id: slide.id),
            data: { confirm: 'Are you sure?' },
            remote: true do
        %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-gray-500">
            <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
          </svg>
        <% end %>


        <div class="slide-item__handle">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-gray-500">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
          </svg>
        </div>
      </div>
    </div>
  <% end %>
</div>

<script>
  $('#slide-list').sortable({
    handle: '.slide-item__handle',
    axis: 'y',
    update: function(event, ui) {
      const ids = $('.slide-item').map(function(index, el) {
        return $(el).data('slide-id');
      }).get();

      $.ajax({
        method: 'POST',
        url: '<%= dashboard_slides_update_path %>',
        data: {
          slides: ids
        }
      });
    }
  });
</script>