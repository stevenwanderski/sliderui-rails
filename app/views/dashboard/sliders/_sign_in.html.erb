<% if @session_error %>
  <div class="rounded-md bg-red-50 p-4 mb-8 border border-red-300">
    <div class="flex">
      <div class="flex-shrink-0">
        <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
        </svg>
      </div>
      <div class="ml-3">
        <div class="text-sm text-red-700">
          <%= @session_error %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div class="mt-3 text-center sm:mt-5">
  <div class="flex flex-col items-center">
    <h3 class="text-xl font-semibold text-gray-900" id="modal-title">Login to Your Account</h3>
  </div>
</div>

<div class="flex min-h-full flex-col justify-center px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <%= form_for(@user, url: dashboard_slider_session_create_path(short_code: @slider.short_code), remote: true, html: { class: 'space-y-6' }) do |f| %>
      <div>
        <%= f.label :email, 'Email', class: 'block text-sm font-medium leading-6 text-gray-900' %>
        <div class="mt-2">
          <%= f.text_field :email, type: :email, required: true, class: 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6' %>
        </div>
      </div>

      <div>
        <%= f.label :password, 'Password', class: 'block text-sm font-medium leading-6 text-gray-900' %>
        <div class="mt-2">
          <%= f.password_field :password, required: true, class: 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6' %>
        </div>
      </div>

      <div>
        <button type="submit" class="flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
          Login
        </button>
      </div>
    <% end %>

    <p class="mt-10 text-center text-sm text-gray-500">
      Don't have an account?
      <button @click="form = 'signup'" class="font-semibold leading-6 text-indigo-600 hover:text-indigo-500">
        Click here to create an account
      </button>
    </p>
  </div>
</div>