<div class="slides" id="slides" x-show="visible == 'images'">
  <div class="scrollable">
    <div class="scrollable__header">
      <% if slides.none? %>
        <div class="hand">ðŸ‘‰</div>
      <% end %>

      <div class="image-uploader">
        <input
          accept="image/jpeg, image/png, image/gif"
          class="image-uploader__file"
          type="file"
          id="file-upload"
        >

        <label
          class="image-uploader__label button button--secondary button--full-width button--add-slide"
          for="file-upload"
        >
          Add Image
        </label>
      </div>
    </div>

    <div class="scrollable__body scrollable__body--button">
      <%= render 'slide_list', slides: slides %>
    </div>
  </div>
</div>
