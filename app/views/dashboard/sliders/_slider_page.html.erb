<div id="slider-page">
  <% if slider.slides.any? %>

    <div class="flex gap-8 py-8">
      <div class="flex-shrink-0 w-80 flex flex-col" x-data="{ visible: 'images' }">
        <div class="w-full mb-6">
          <button @click="modal = true" type="button" class="w-full rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
            Install Slider
          </button>
        </div>

        <div class="bg-white rounded-md p-4 border border-gray-200 w-full">
          <div class="flex justify-between mb-4">
            <nav class="flex space-x-2">
              <button
                class="text-gray-500 hover:text-gray-700 rounded-md px-2 py-1 text-sm font-medium"
                :class="visible == 'images' ? 'bg-gray-100 text-gray-700' : ''"
                @click="visible = 'images'"
              >
                Slides
              </button>

              <button
                class="text-gray-500 hover:text-gray-700 rounded-md px-2 py-1 text-sm font-medium"
                :class="visible == 'settings' ? 'bg-gray-100 text-gray-700' : ''"
                @click="visible = 'settings'"
              >
                Settings
              </button>
            </nav>
          </div>

          <div>
            <%= render 'settings', slider: slider %>
            <%= render 'slides', slider: slider, slides: slider.slides %>
          </div>
        </div>
      </div>

      <div class="flex-grow flex w-full">
        <div class="bg-white rounded-md p-4 border border-gray-200 flex-grow">
          <%= render 'preview', slider: slider %>
        </div>
      </div>
    </div>

  <% else %>

    <div class="py-10">
      <div class="text-center rounded-lg border-2 border-dashed border-gray-300 p-12 bg-white max-w-lg mx-auto">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1" stroke="currentColor" class="mx-auto h-12 w-12 text-gray-400">
          <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 15.75l5.159-5.159a2.25 2.25 0 013.182 0l5.159 5.159m-1.5-1.5l1.409-1.409a2.25 2.25 0 013.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 001.5-1.5V6a1.5 1.5 0 00-1.5-1.5H3.75A1.5 1.5 0 002.25 6v12a1.5 1.5 0 001.5 1.5zm10.5-11.25h.008v.008h-.008V8.25zm.375 0a.375.375 0 11-.75 0 .375.375 0 01.75 0z" />
        </svg>

        <h3 class="mt-2 text-sm font-semibold text-gray-900">Your slideshow will appear here!</h3>
        <p class="mt-1 text-sm text-gray-500">Get started by adding a new image.</p>
        <div class="mt-6">
          <label for="file-upload" class="cursor-pointer inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
            <svg class="-ml-0.5 mr-1.5 h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path d="M10.75 4.75a.75.75 0 00-1.5 0v4.5h-4.5a.75.75 0 000 1.5h4.5v4.5a.75.75 0 001.5 0v-4.5h4.5a.75.75 0 000-1.5h-4.5v-4.5z" />
            </svg>

            New Image
          </label>

          <input
            accept="image/jpeg, image/png, image/gif"
            class="file-upload sr-only"
            type="file"
            id="file-upload"
            name="file-upload"
          >
        </div>
      </div>
    </div>

  <% end %>

</div>
