<h1>Sliders</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>Title</th>
      <th>Slides</th>
      <th>Requests</th>
    </tr>
  </thead>

  <tbody>
    <% @sliders.each do |slider| %>
      <tr>
        <td><%= l(slider.created_at) %></td>
        <td><%= link_to slider.short_code, admin_slider_path(slider) %></td>
        <td><%= slider.slides.count %></td>
        <td><%= number_with_delimiter(slider.request_logs.count) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @sliders, theme: 'twitter-bootstrap-4' %>
