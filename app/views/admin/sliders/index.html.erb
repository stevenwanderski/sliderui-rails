<h1>Sliders</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>
        <%= link_to admin_sliders_path(sort: :date, dir: sort_new_direction('date', @sort, @direction)) do %>
          Date <%= sort_arrow('date', @sort, @direction) %>
        <% end %>
      </th>
      <th>Slider</th>
      <th></th>
      <th></th>
      <th>Slide Count</th>
      <th>
        <%= link_to admin_sliders_path(sort: :requests, dir: sort_new_direction('requests', @sort, @direction)) do %>
          Requests <%= sort_arrow('requests', @sort, @direction) %>
        <% end %>
      </th>
      <th>
        <%= link_to admin_sliders_path(sort: :tracks, dir: sort_new_direction('tracks', @sort, @direction)) do %>
          Track Logs <%= sort_arrow('tracks', @sort, @direction) %>
        <% end %>
      </th>
      <th>User</th>
      <th>Last Request</th>
    </tr>
  </thead>

  <tbody>
    <% @sliders.each do |slider| %>
      <tr>
        <td><%= l(slider.created_at) %></td>
        <td>
          <%= slider.short_code %>
        </td>
        <td><%= link_to 'Stats', admin_slider_path(slider) %></td>
        <td>
          <%= link_to 'Dashboard',
              dashboard_edit_slider_path(short_code: slider.short_code),
              target: '_blank'
          %>
        </td>
        <td><%= slider.slides.count %></td>
        <td><%= number_with_delimiter(slider.request_logs_count) %></td>
        <td><%= number_with_delimiter(slider.track_logs.count) %></td>
        <td>
          <% if slider.user.present? %>
            <%= slider.user.email %>
          <% end %>
        </td>
        <td>
          <% if slider.request_logs.any? %>
            <%= l(slider.request_logs.order(created_at: :desc).first.created_at, format: :short) %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @sliders, theme: 'twitter-bootstrap-4' %>
