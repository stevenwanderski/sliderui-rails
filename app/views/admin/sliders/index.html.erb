<h1>Sliders</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>Slider</th>
      <th></th>
      <th></th>
      <th>Slide Count</th>
      <th>Requests</th>
      <th>User</th>
    </tr>
  </thead>

  <tbody>
    <% @sliders.each do |slider| %>
      <tr>
        <td><%= l(slider.created_at) %></td>
        <td>
          <%= slider.short_code %>
        </td>
        <td><%= link_to 'Stats', admin_slider_path(slider) %></td>
        <td>
          <%= link_to 'Dashboard',
              dashboard_edit_slider_path(short_code: slider.short_code),
              target: '_blank'
          %>
        </td>
        <td><%= slider.slides.count %></td>
        <td><%= number_with_delimiter(slider.request_logs.count) %></td>
        <td>
          <% if slider.user.present? %>
            <%= slider.user.email %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @sliders, theme: 'twitter-bootstrap-4' %>
