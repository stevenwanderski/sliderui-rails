<h1>Track Logs</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>URL</th>
      <th>Slider</th>
    </tr>
  </thead>

  <tbody>
    <% @track_logs.each do |track_log| %>
      <tr>
        <td><%= l(track_log.created_at) %></td>
        <td>
          <span class="d-inline-block text-truncate" style="max-width: 600px;">
            <%= link_to track_log.url, track_log.url, target: '_blank' %>
          </span>
        </td>
        <td>
            <%= link_to track_log.short_code,
                dashboard_edit_slider_path(short_code: track_log.short_code),
                target: '_blank'
            %>
          </span>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @track_logs, theme: 'twitter-bootstrap-4' %>
