<h1>Request Logs</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>Referrer</th>
      <th>User</th>
    </tr>
  </thead>

  <tbody>
    <% @request_logs.each do |request_log| %>
      <tr>
        <td><%= l(request_log.created_at) %></td>
        <td>
          <% if request_log.referrer.present? %>
            <%= link_to request_log.referrer, request_log.referrer, target: '_blank' %>
          <% end %>
        </td>
        <td><%= request_log&.user&.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @request_logs, theme: 'twitter-bootstrap-4' %>
