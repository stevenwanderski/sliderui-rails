<%= render 'jquery' %>
<% output = render 'dashboard/sliders/slider_code', slider: @slider %>

$('[data-slider-id="<%= @slider.short_code %>"]').html('<%= j(output) %>')

$.ajax({
  url: '<%= ENV['APP_HOST'] %>/track',
  type: 'POST',
  data: {
    short_code: '<%= @slider.short_code %>',
    url: window.location.href
  }
})