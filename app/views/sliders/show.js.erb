function checkJquery(callback) {
  if (typeof(jQuery) == 'undefined') {
    const script = document.createElement('script');
    script.src = 'https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js';
    document.querySelector('head').appendChild(script);
    script.onload = function(){
      callback();
    }
  } else {
    callback();
  }
}

function checkBxslider(callback) {
  if (typeof($.slick) == 'undefined') {
    const script = document.createElement('script');
    script.src = 'https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.6.0/slick.min.js';
    document.querySelector('head').appendChild(script);
    script.onload = function(){
      callback();
    }
  } else {
    callback();
  }
}

function loadBxsliderCss() {
  const link1 = document.createElement('link');
  link1.rel = 'stylesheet';
  link1.type = 'text/css';
  link1.href = 'https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.6.0/slick.min.css'
  link1.media = 'all';
  document.querySelector('head').appendChild(link1);

  const link2 = document.createElement('link');
  link2.rel = 'stylesheet';
  link2.type = 'text/css';
  link2.href = 'https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.6.0/slick-theme.min.css'
  link2.media = 'all';
  document.querySelector('head').appendChild(link2);
}

function sliderInit() {
  $(function() {
    $('[data-slider-id="<%= @slider.id %>"]').html('<%= @output.html_safe %>');
    $('.slider').slick({
      adaptiveHeight: true,
      dots: true
    });
  });
}

loadBxsliderCss();

checkJquery(function(){
  checkBxslider(function(){
    sliderInit();
  });
});
