<html>
  <head>
    <%= stylesheet_link_tag 'mailer' %>
  </head>
  <body>
    <table border="0" cellpadding="0" cellspacing="0" height="100%" width="100%" id="body-table">
      <tr>
        <td align="center" valign="top">
          <table border="0" cellpadding="20" cellspacing="0" width="100%" id="email-container">
            <tr>
              <td align="center" valign="top">
                <table border="0" cellpadding="20" cellspacing="0" width="100%" id="email-header">
                  <tr>
                    <td align="left" valign="top" class="email-header--content">
                      <img src="https://sliderui-staging.s3.amazonaws.com/assets/logo.png" width="100" />
                    </td>
                  </tr>
                </table>
              </td>
            </tr>
            <tr>
              <td align="center" valign="top">
                <table border="0" cellpadding="20" cellspacing="0" width="100%" id="email-body">
                  <%= yield %>
                </table>
              </td>
            </tr>
          </table>
        </td>
      </tr>
    </table>
  </body>
</html>
