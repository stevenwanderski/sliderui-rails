<div class="container__header container__header--app">
  <div class="user-toolbar">
    <div class="brand">
      <div class="brand__logo"></div>
      <div class="brand__name">
        <%= link_to 'SliderUI', dashboard_sliders_path %>
      </div>
    </div>

    <div class="user-toolbar__account">
      <div class="user-toolbar__email">
        <div><%= current_user.email %></div>
        <div class="arrow-down"></div>

        <div class="user-toolbar__drop-down">
          <div class="inner">
            <div class="user-toolbar__row">
              <%= link_to 'Sliders', dashboard_sliders_path %>
            </div>

            <div class="user-toolbar__row">
              <%= link_to 'Account', edit_dashboard_subscription_path %>
            </div>

            <div class="user-toolbar__row">
              <a href="mailto:slideruiapp@gmail.com?subject=SliderUI Support">Help</a>
            </div>

            <div class="user-toolbar__row">
              <%= link_to 'Logout', destroy_user_session_path %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
