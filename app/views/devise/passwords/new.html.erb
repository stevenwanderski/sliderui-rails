<%= render 'devise/shared/header' %>
<%= render 'layouts/dashboard/flash_messages' %>

<div class="authentication section">
  <h1>Forgot Password</h1>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <div class="form-row">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, class: 'input--text' %>

      <% if resource.errors[:email].present? %>
        <div class="error">
          <%= resource.errors.full_messages_for(:email).first %>
        </div>
      <% end %>
    </div>

    <div class="form-row">
      <%= f.submit "Send me reset password instructions", class: 'button button--primary' %>
    </div>
  <% end %>
</div>
