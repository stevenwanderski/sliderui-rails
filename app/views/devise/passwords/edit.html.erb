<%= render 'devise/shared/header' %>
<%= render 'layouts/dashboard/flash_messages' %>

<div class="authentication section">
  <h1>Reset Password</h1>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.hidden_field :reset_password_token %>

    <div class="form-row">
      <%= f.label :password, "New password", class: 'label' %>
      <%= f.password_field :password, autofocus: true, autocomplete: "off", class: 'input--text' %>
    </div>

    <div class="form-row">
      <%= f.label :password_confirmation, "Confirm new password", class: 'label' %>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'input--text' %>
    </div>

    <div class="form-row">
      <%= f.submit "Change my password", class: 'button button--primary' %>
    </div>
  <% end %>
</div>
