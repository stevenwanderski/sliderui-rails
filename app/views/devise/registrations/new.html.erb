<%= render 'devise/shared/header' %>
<%= render 'layouts/dashboard/flash_messages' %>

<div class="authentication main">
  <div class="main__header">
    <h1>Sign Up</h1>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'form-auth') do |f| %>
    <div class="form-row">
      <%= f.label :email, class: 'label' %>
      <%= f.email_field :email, autofocus: true, class: "input--text" %>

      <% if resource.errors[:email].present? %>
        <div class="error">
          <%= resource.errors.full_messages_for(:email).first %>
        </div>
      <% end %>
    </div>

    <div class="form-row">
      <%= f.label :password, class: 'label' %>
      <%= f.password_field :password, autocomplete: "off", class: "input--text" %>

      <% if resource.errors[:password].present? %>
        <div class="error">
          <%= resource.errors.full_messages_for(:password).first %>
        </div>
      <% end %>
    </div>

    <div class="form-row">
      <%= f.label :password_confirmation, 'Confirm Password', class: 'label' %>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "input--text" %>

      <% if resource.errors[:password_confirmation].present? %>
        <div class="error">
          <%= resource.errors.full_messages_for(:password_confirmation).first %>
        </div>
      <% end %>
    </div>

    <div class="form-row form-actions">
      <%= f.submit 'Submit', class: 'button button--primary' %>
      <%= link_to 'Cancel', root_path %>
    </div>
  <% end %>
</div>
