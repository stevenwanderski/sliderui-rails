<div class="container__header container__header--brand">
  <div class="brand">
    <div class="brand__logo"></div>
    <div class="brand__name">
      <a href="/">
        SliderUI
      </a>
    </div>
  </div>

  <div>
    <%= link_to 'Sign up', new_user_registration_path %>
  </div>
</div>

<%= render 'layouts/dashboard/flash_messages' %>

<div class="authentication section">
  <h1>Login</h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'form-auth') do |f| %>
    <div class="form-row">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: "input--text" %>
    </div>

    <div class="form-row">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off", class: "input--text" %>
    </div>

    <div class="form-row form-actions">
      <%= f.submit "Submit", class: "button button--primary" %>
      <%= link_to 'Forgot Password', new_user_password_path %>
    </div>
  <% end %>
</div>
